.visible {
    transition-timing-function: ease-in-out, ease;
    transition-duration: 2s, 0s;
    display: flex;
    transition-property: opacity, display;
    opacity: 1;
    transition-delay: 0s, 0s;
}

.hidden {
    display: none;
    opacity: 0;
    transition-property: opacity, display;
    transition-timing-function: ease-in-out, ease;
    transition-duration: 2s, 0s;
    transition-delay: 0s, 2s;
}
